<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <PreferenceCategory android:title="功能设置">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="isnotice"
            android:layout="@layout/preference"
            android:summary="已开启接收通知"
            android:title="接收通知" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="voice"
            android:layout="@layout/preference"
            android:summary="已开启提示声音"
            android:title="提示声音" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="checkup"
            android:layout="@layout/preference"
            android:summary="启动程序时检查版本更新"
            android:title="启动检查更新" />
    </PreferenceCategory>

    <PreferenceCategory android:title="缓存设置">

        <Preference
            android:key="cache"
            android:layout="@layout/preference"
            android:summary="256KB"
            android:title="清除缓存" />
    </PreferenceCategory>

</PreferenceScreen>